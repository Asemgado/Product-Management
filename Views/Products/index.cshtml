@model IEnumerable<Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products List</h2>
        <a asp-action="Enter" class="btn btn-primary">Add New Product</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Weight</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.product_code</td>
                    <td>@item.product_name</td>
                    <td>@item.product_wight</td>
                    <td>@item.product_price</td>
                    <td>@item.product_quantity</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.product_id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">Home</a>
        <a href="@Url.Action("Transaction", "Transactions")" class="btn btn-secondary">New Transaction</a>
</div>
